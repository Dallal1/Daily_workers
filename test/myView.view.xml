<mvc:View xmlns="sap.ui.unified"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          displayBlock="true">
  <PlanningCalendar id="PC1"
                    rows="{path: '/appointments'}"
                    appointmentSelect="handleAppointmentSelect">
    <rows>
      <PlanningCalendarRow icon="{pic}"
                           title="{title}"
                           text="{info}"
                           appointments="{path : 'appointments'}">
        <appointments>
          <unified:CalendarAppointment startDate="{startDate}"
                                      endDate="{endDate}"
                                      title="{title}"
                                      text="{info}"
                                      type="Type02"
                                      tentative="false"/>
        </appointments>
      </PlanningCalendarRow>
    </rows>
  </PlanningCalendar>
</mvc:View>
